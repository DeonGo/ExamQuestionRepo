<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="题目" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_a" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_b" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_c" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer_d" />
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/rgroup_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_a" />

        <RadioButton
            android:id="@+id/rbtn_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_b" />

        <RadioButton
            android:id="@+id/rbtn_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_c" />

        <RadioButton
            android:id="@+id/rbtn_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_d" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_a" />

        <CheckBox
            android:id="@+id/cb_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_b" />

        <CheckBox
            android:id="@+id/cb_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_c" />

        <CheckBox
            android:id="@+id/cb_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/string_d" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="提交"
        android:theme="@style/AppTheme.Button"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_submit"/>


</LinearLayout>